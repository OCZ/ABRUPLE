@if (this.Request.Url != null && this.Request.Url.AbsolutePath == "/")
{
    <div id="home-slider" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#home-slider" data-slide-to="0" class="active"></li>
            <li data-target="#home-slider" data-slide-to="1"></li>
            <li data-target="#home-slider" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="first-slide" src="https://enterprise.github.com/assets/aws/jetpack-octocat-airlock-b1d6ad7f41f88e5207896fe1f63ca30b.jpg" alt="Source code">
                <div class="container">
                    <div class="carousel-caption">
                        <h3>Find us on GitHub</h3>
                        <p class="text text-warning">
                            Do you want to understand really, how ABRUPLE MasterPhoto works?<br>
                            Feel free to check our source code.
                            Feel free also to pull requests if you want to support us.
                        </p>
                        <p>
                            <a class="btn btn-lg btn-default" href="https://github.com/OCZ/ABRUPLE" title="Check source code" target="_blank" role="button">Source</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="second-slide" src="http://images3.alphacoders.com/264/264579.jpg" alt="About ABRUPLE PhotoMaster">
                <div class="container">
                    <div class="carousel-caption">
                        <h3>
                            Capture your favorite moments and share them with<br>
                            <strong class="text-primary">ABRUPLE PhotoMaster</strong>
                        </h3>
                        <p>
                            <a class="btn btn-lg btn-primary" href="#featuretee-start" title="Learn more" role="button">Learn more</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="third-slide" src="https://softuni.bg/Files/Publications/2015/10/programming-basics-softuni-7_182337133.jpg" alt="SoftUni">
                <div class="container">
                    <div class="carousel-caption">
                        <h3>The project is inspired by</h3>
                        <p>
                            <a class="btn btn-lg btn-success" title="Visit SoftUni" href="https://softuni.bg" target="_blank" role="button">SoftUni</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#home-slider" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#home-slider" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}