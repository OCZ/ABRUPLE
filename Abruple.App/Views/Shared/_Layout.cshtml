<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ABRUPLE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" title="ABRUPLE">
                    <h1 class="navbar-brand">
                        <img src="~/Content/images/contest-logo.png" alt="ABPRULE-logo" width="64" height="64" />
                    </h1>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav list-group-item">
                    <li>
                        <a href="/" id="home-btn" class="btn btn-info" title="Home">
                            <span class="glyphicon glyphicon-home"></span>
                        </a>
                    </li>
                    <li>
                        @Html.ActionLink("Contests", "Index", "Contest", null, new { title = "Contests", @class = "btn btn-default" })
                    </li>
                    <li>
                        @if (@User.Identity.IsAuthenticated)
                        {
                            // TODO: THINK ABOUT FORGERY TOKEN ? Y/N
                            using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "navbar-form", role = "search" }))
                            {
                                <div class="input-group">
                                    <input id="main-input-search" type="search" placeholder="Search..." class="form-control input-search" aria-label="search">
                                    <div class="input-group-btn">
                                        <span id="active-search-type" class="form-control">User</span>

                                        <button type="button" title="Search" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="glyphicon glyphicon-search"></span>
                                            <span class="caret"></span>
                                        </button>

                                        <ul class="dropdown dropdown-menu">
                                            <li><a id="search-type-user" class="search-type" href="#" title="Search for user">User</a></li>
                                            <li><a id="search-type-contest" class="search-type" href="#" title="Search for contest">Contest</a></li>
                                        </ul>
                                    </div>
                                </div>
                            }
                        }
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right navbar-collapse collapse">
                    @Html.Partial("_NewContestPartialView")
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>
    @Html.Partial("_HomeSliderPartial")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ABRUPLE</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/signalr")
    <script src="/signalr/hubs"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#create-contest-form-content').draggable();

            var contestStrategy = $(".contest-strategy");

            contestStrategy.change(function () {
                var strategyName = (this).id;
                var strategyValue = $(this).val();

                //The code below is in construction don't expect it to work 100% of the time :)
                switch (strategyName) {
                    case "contest-reward-strategy":
                        if (strategyValue == 0) {
                            $("#contest-reward").remove();
                        } else {
                            $("<input type='number' min='2' id='contest-reward' class='form-control'>").appendTo($("#contest-reward-field"));
                        }
                        break;
                    case "contest-deadline-strategy":
                        //TODO: Date picker should show by default and not only when selected.
                        if (strategyValue == 0) {
                            $("#contest-deadline-number").remove();
                            $("<input type='date' min='2' id='contest-deadline-date' class='form-control'>").appendTo($("#contest-deadline-field"));
                        } else {
                            $("#contest-deadline-date").remove();
                            $("<input type='number' min='2' id='contest-deadline-number' class='form-control'>").appendTo($("#contest-deadline-field"));
                        }
                        break;
                    case "contest-voting-strategy":
                        if (strategyValue == 0) {
                            $("#contest-voting").remove();
                        } else {
                            $("<input type='text' min='2' id='contest-voting' class='form-control'>").appendTo($("#contest-voting-field"));
                        }
                        break;
                    case "contest-participation-strategy":
                        if (strategyValue == 0) {
                            $("#contest-participation").remove();
                        } else {
                            $("<input type='text' min='2' id='contest-participation' class='form-control'>").appendTo($("#contest-participation-field"));
                            //                            $("<span class='input-group-btn'><button class='btn btn-default' type='button'>" +
                            //                                "Go!</button></span>").appendTo($("#contest-participation-field"));
                            $("<ul id='users'></ul>").appendTo($("#contest-participation-field"));
                        }
                        break;
                    default:
                }

                $("#contest-participation").keyup(function () {
                    //TODO: Simplify and optimize.
                    $("#users").html("");

                    $("<li id='" + $("#contest-participation").val() + "'>"
                        + $("#contest-participation").val() +
                        " <button type='button' class='close' id='close" + $("#contest-participation").val() + "'>" +
                        "&times;</button></li>").appendTo($("#users"));

                    $("#close" + $("#contest-participation").val()).click(function () {
                        $("#" + $("#contest-participation").val()).remove();
                    });
                });
            });
        });
    </script>

    <!--SEARCH AUTOCOMPLETE-->
    <script>
        var inputSearch = $(".input-search");
        var searchType = $(".search-type");

        var autocompleteInput = function (inputElement) {
            var inputValue = inputElement.val();
            var searchType = $("#active-search-type").text();
            var queryString = searchType + "/Search";

            $.getJSON(queryString, { name: inputValue }, function (response) {
                if (response.length) {

                    console.clear();
                    response.forEach(function (result) {
                        var contestId = result["Id"];
                        var contestTitle = result["Title"];

                        console.log(contestId);
                        console.log(contestTitle);
                    });
                } else {
                    console.clear();
                }
            });
        }

        // LISTENERS

        // SERCH INPUT ON KEY PRESS
        inputSearch.keyup(function () {
            autocompleteInput(inputSearch);
        });
        // SERCH INPUT ON FOCUS
        inputSearch.focus(function () {
            autocompleteInput(inputSearch);
        });


        // SEARCH TYPE ON CLICK
        searchType.click(function () {
            var searchTypeValue = this.id;

            switch (searchTypeValue) {
                case "search-type-contest":
                    $("#active-search-type").text("Contest");
                    break;
                case "search-type-user":
                default:
                    $("#active-search-type").text("User");
            }
        });
    </script>
</body>
</html>
